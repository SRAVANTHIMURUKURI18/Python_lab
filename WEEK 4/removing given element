l=[]
n=int(input("enter the no.of elements"))
for i in range(n):
     el=int(input("enter the ele  "))
     l.append(el)
print(l)
p=int(input("enter a element to remove"))
l.remove(p)
print(l)




or




l=[]
n=int(input("enter the no.of elements "))
for i in range(n):
     el=int(input("enter the ele  "))
     l.append(el)
print(l)


p=int(input("enter a element to remove"))
if p in l:
    while p in l:
          l.remove(p)
    print(l)
else:
    print("NO SUCH ELEMENT")
