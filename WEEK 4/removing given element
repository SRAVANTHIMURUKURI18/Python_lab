l=[]
n=int(input("enter the no.of elements"))
for i in range(n):
     el=int(input("enter the ele  "))
     l.append(el)
print(l)
n=int(input("enter a element to remove"))
l.remove(n)
print(l)




or




l=[]
n=int(input("enter the no.of elements "))
for i in range(n):
     el=int(input("enter the ele  "))
     l.append(el)
print(l)


n=int(input("enter a element to remove"))
if n in l:
    while n in l:
          l.remove(n)
    print(l)
else:
    print("NO SUCH ELEMENT")
